<MainScreen>:
    incomes: income
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Money manager"
            md_bg_color: app.theme_cls.primary_color
            right_action_items: [['settings', lambda x: root.open_settings()]]

        BoxLayout:

            orientation: 'vertical'
            size_hint: 1,1

            BoxLayout:
                padding: 20,20,20,0
                spacing: 20
                MDRaisedButton:
                    size_hint: .1,.33
                    text: "Day"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {"top": 1}
                MDRaisedButton:
                    size_hint: .1,.33
                    text: "Month"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {"top": 1}
                MDRaisedButton:
                    size_hint: .1,.33
                    text: "Year"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {"top": 1}

            GridLayout:
                cols:2

                MDLabel:
                    text: 'Expense: 0'
                    halign:'center'

                MDLabel:
                    id: income
                    text: 'Income: 0'
                    halign:'center'

            MDLabel:
                text: 'Balance: 0'
                halign:'center'

            BoxLayout:
                padding: 20,0,20,20
                spacing: 20
                MDRaisedButton:
                    size_hint: .9,.5
                    text: "Expense"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {"center_x": .5}
                    on_press:
                        root.manager.transition.direction = 'up'
                        root.manager.transition.duration = .3
                        root.manager.current = 'info_screen'
                MDRaisedButton:
                    size_hint: .9,.5
                    text: "Income"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {"center_x": .5}
                    on_press:
                        root.add_m()
                    

<InfoScreen>:
    BoxLayout:
    MDRaisedButton:
        size_hint: .1,.33
        text: "Info"
        elevation_normal: 2
        opposite_colors: True
        pos_hint: {"top": 1}
        on_press:
            root.manager.transition.direction = 'down'
            root.manager.transition.duration = .3
            root.manager.current = 'main_screen'
<SettingsScreen>:
    BoxLayout:
    MDRaisedButton:
        size_hint: .1,.33
        text: "Settings"
        elevation_normal: 2
        opposite_colors: True
        pos_hint: {"top": 1}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.transition.duration = .3
            root.manager.current = 'main_screen'

ScreenManager:
    MainScreen:
        name: 'main_screen'
    InfoScreen:
        name: 'info_screen' 
    SettingsScreen:
        name: 'settings_screen'
